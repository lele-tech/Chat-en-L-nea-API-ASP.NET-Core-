@model AppWebBibliotecaConsumo.Models.Usuario
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
        </div>

        <div class="col-md-4">
            <form asp-action="Login" id="FormularioLogin">
                @*Mensaje de errores*@
                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-warning" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                        <strong>@TempData["Mensaje"]</strong>
                    </div>
                }

                @*Solicitamos el email*@
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="jorge@domain.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                @*Solicitud de password*@
                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    ¿No tienes una cuenta?
                    <a asp-controller="Usuarios" asp-action="CrearCuenta"> Cree una. </a>
                </div>

                @*Botón que ejecuta el post del formulario*@
                <div class="form-group">
                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-4">
        </div>
    </div>
</div>


